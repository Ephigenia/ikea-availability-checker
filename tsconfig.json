{
  "preset": "ts-jest",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "types": [
    "@types/nock",
    "@types/node"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
